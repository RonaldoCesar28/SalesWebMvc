@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6"> 
        <form class="form-horizontal" asp-action= "SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="form-group">
                    <label for="minDate" class="row-cols-lg-10 control-label">Min Date</label> 
                    <div class="row-cols-lg-2"> 
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="row-cols-lg-10 control-label">Max Date</label>
                    <div class="row-cols-lg-2">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="row-cols-lg-10 row-cols-lg-2">
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="form-group">
                    <label for="minDate" class="row-cols-lg-10 control-label">Min Date</label>
                    <div class="row-cols-lg-2">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="row-cols-lg-10 control-label">Max Date</label> 
                    <div class="row-cols-lg-2">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="row-cols-lg-10 row-cols-lg-2"> 
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

